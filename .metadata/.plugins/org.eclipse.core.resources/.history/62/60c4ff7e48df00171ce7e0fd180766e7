package paintExercise;

import java.util.ArrayList;

public class PaintWizard {

	private ArrayList<Paint> paints = new ArrayList<>();

	public PaintWizard() {
		// initialise paint here?
		paints.add(new Paint("CheapoMax", 20, 19.99f, 10));
		paints.add(new Paint("AverageJoes", 15, 17.99f, 11));
		paints.add(new Paint("DuluxourousPaints", 10, 25.f, 20));
	}

	public Paint bestForFloor(int floorSize) {
		Paint best = null;
		double cheapest = Double.MAX_VALUE;

		for (Paint p : paints) {

			// how much each tin can cover
			double coverage = (double) p.getCapacity() * p.getCoverage();
			// minimum needed for the floor size given
			int cansNeeded = (int) Math.ceil(floorSize / coverage);

			double price = cansNeeded * p.getPrice();

			if (price < cheapest) {
				cheapest = price;
				best = p;
			}
		}

		return best;
	}

	public void addPaint(Paint paint) {
		paints.add(paint);
	}
}
