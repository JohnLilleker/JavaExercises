
public class Exercises {

	public static void main(String[] args) {
		Exercises ex = new Exercises();
		ex.ex1();
		ex.ex2();
		ex.ex3("Parameter passing");
		System.out.println(ex.ex4());
		System.out.println(ex.ex5(3, 4));
		System.out.println(ex.ex6(3, 4, true));
		System.out.println(ex.ex6(3, 4, false));
	}
	
	public void ex1() {
		System.out.println("Hello World!");
	}
	
	public void ex2() {
		String message = "Hello World!";
		System.out.println(message);
	}
	
	public void ex3(String message) {
		System.out.println(message);
	}
	
	public String ex4() {
		return "Hello World!";
	}
	
	public int ex5(int x, int y) {
		return x + y;
	}
	
	public int ex6(int x, int y, boolean sum) {
		if (sum)
			return x + y;
		else
			return x*y;
	}

}
